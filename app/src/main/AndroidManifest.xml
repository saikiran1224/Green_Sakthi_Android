<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.greenshakthi.android">

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:fullBackupOnly="false"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GreenSakthi"
        tools:targetApi="31">
        <activity
            android:name=".home.PostPaymentPage"
            android:exported="false" />
        <activity
            android:name=".home.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".home.OrderCheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding.CustomerNameActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.GetStartedActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.OTPActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.VerifyPhoneNumberActivity"
            android:exported="true" />
        <activity
            android:name=".onboarding.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>