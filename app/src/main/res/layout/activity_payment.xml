<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_green"
    android:layout_height="match_parent"
    tools:context=".home.PaymentActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/edt_bg"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_chevron_left_24"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@color/white"
            app:drawableTint="@color/darkgreen" />

        <TextView
            android:id="@+id/txtOnlinePaymentOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtBackButton"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_30_dp"
            android:fontFamily="@font/lexend"
            android:text="Payment Options"
            android:textColor="@color/green"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/txtOnlinePaymentOptions"
            android:layout_alignParentStart="true"
            app:strokeColor="@color/green"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true"
            app:strokeWidth="1dp"
            android:id="@+id/cashOnDeliveryCard"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="15dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_40_dp"
            android:layout_marginEnd="@dimen/dimen_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/light_gray"
                    android:fontFamily="@font/lexend"
                    android:text="Cash on Delivery (CoD)"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/edt_bg"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tint="@color/green"
                        android:id="@+id/codImage"
                        android:padding="@dimen/dimen_10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/cashOnDeliveryCard"
            android:layout_alignParentStart="true"
            app:strokeColor="@color/green"
            android:clickable="false"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true"
            app:strokeWidth="1dp"
            android:id="@+id/OnlinePaymentCard"
            app:cardElevation="15dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/dimen_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/edt_bg"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtPayAmountOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/light_gray"
                    android:layout_centerVertical="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/lexend"
                    android:text="Pay Amount Online"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtPayAmountOnline"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/light_gray"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="5dp"
                    android:text="Coming Soon"
                    android:textSize="@dimen/text_size_17sp" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tint="@color/green"
                        android:padding="@dimen/dimen_10dp"
                        android:id="@+id/debitCardImage"
                         />

                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/OnlinePaymentCard"
            android:layout_marginTop="@dimen/dimen_40_dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtPoweredBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lexend"
                android:text="Powered by"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/rzpImage"
                android:layout_width="110dp"
                android:layout_height="@dimen/dimen_25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/txtPoweredBy" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>